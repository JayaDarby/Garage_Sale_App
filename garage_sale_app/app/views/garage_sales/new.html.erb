  <body ng-controller="GarageSaleController" nv-file-drop="" uploader="uploader" filters="queueLimit, customFilter">

        <!-- Fix for old browsers -->
        <script src="http://nervgh.github.io/js/es5-shim.min.js"></script>
        <script src="http://nervgh.github.io/js/es5-sham.min.js"></script>
        <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
        <%= javascript_include_tag 'bootstrap-datetimepicker.min.js'  %>
        <!--- <script src="../console-sham.js"></script> --->

        <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>

        <!--<script src="../bower_components/angular/angular.js"></script>-->
        

        <style>
            .my-drop-zone { border: dotted 3px lightgray; }
            .nv-file-over { border: dotted 3px red; } /* Default class applied to drop zones on over */
            .another-file-over-class { border: dotted 3px green; }
            html, body { height: 100%; }
            #leftNewGarageSale{float:left;
                                width:730px;}
            #rightNewGarageSale{float:left;
                                width:400px;}
            input[type='checkbox']{
                width:10px;
            }

            input{
                width: 400px;
            }
            #garage_sale_zip_code{
                width:200px;
            }
            textarea.form-control {
                width:500px;
                height:250px;
                border-radius: 3px;
            }
            #garage_sale_title{
                width: 500px;
            }

            

        </style>
        <script>
        $(document).ready(function(){
            $('[data-toggle="popover"]').popover(); 
        });
        </script>
        <div class='container'>
        <h4>New Garage Sale</h4>
        <%= form_for [@user, @garage_sale], html: { multipart: true } do |f| %>
        <div id='leftNewGarageSale'>
            <%= f.label "Posting Title"%><br />
            <%= f.text_field :title, :class => 'form-control', :'ng-model' => 'garage_sale.title' %><br />
            <%= f.label "Description" %><br />
            <%= f.text_area :description, :class => 'form-control',  :'ng-model' => 'garage_sale.description'  %><br />
            <a tabindex="0" id='example' class="btn" role="button" data-toggle="popover" data-trigger="focus" data-content="Your description can include items for sale, prices, driving directions, or parking restrictions"><%= image_tag('questionMark.png')%>  What should My Description Have? </a>
        </div>
        <div id='rightNewgarage_sale'>
            <%= f.label "Address" %><br />
            <%= f.text_field :address, :class => 'form-control',  :'ng-model' => 'garage_sale.address'  %><br />
            <%= f.label "City" %><br />
            <%= f.text_field :city, :class => 'form-control',  :'ng-model' => 'garage_sale.City'  %><br />
            <div style='width:400px'>
                <div style='float:left'>
            <%= f.label "State" %><br />
            <%= f.select :state, options_for_select(us_states), :class => 'form-control',  :'ng-model' => 'garage_sale.state' %><br />
                </div>
                <div style='float:right'>
            <%= f.label "Zip Code" %><br />
            <%= f.text_field :zip_code, :class => 'form-control',  :'ng-model' => 'garage_sale.zip_code'  %><br />
                </div>
            </div>
            <%= f.label "Phone Number" %><br />
            <%= f.telephone_field :phone_number, class: 'form-control',  :'ng-model' => 'garage_sale.phoneNumber'  %><br />
            <%= f.label "Email" %><br />
            <%= f.email_field :email, :class => 'form-control',  :'ng-model' => 'garage_sale.email'  %><br />
            <%= f.label "Users Can Contact Me With:" %><br />
            <%= f.check_box :can_email,  :'ng-model' => 'garage_sale.can_email'  %>
            <%= f.label "Email" %><br />
            <%= f.check_box :can_call,  :'ng-model' => 'garage_sale.can_call'  %>
            <%= f.label "Call" %><br />
            <%= f.check_box :can_text,  :'ng-model' => 'garage_sale.can_text'  %>
            <%= f.label "Text" %><br />
        </div>
        <% end %>
        </div><br>

        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h3>Select Photos</h3>
                    <div ng-show="uploader.isHTML5">
                        <!-- 3. nv-file-over uploader="link" over-class="className" -->
                        <!-- Example: nv-file-drop="" uploader="{Object}" options="{Object}" filters="{String}" -->
                        <div nv-file-drop="" uploader="uploader" options="{ url: '/foo' }">
                            <div nv-file-over="" uploader="uploader" over-class="another-file-over-class" class="well my-drop-zone">
                                Drag Images Here
                            </div>
                        </div>
                    </div>
                    <!-- Example: nv-file-select="" uploader="{Object}" options="{Object}" filters="{String}" -->
                    <input type="file" nv-file-select="" uploader="uploader" multiple  /><br/>
                </div>

                <div class="col-md-9" style="margin-bottom: 40px">

                    <h3>Upload Queue</h3>
                    <p>Queue length: {{ uploader.queue.length }}</p>

                    <table class="table">
                        <thead>
                            <tr>
                                <th width="50%">Name</th>
                                <th ng-show="uploader.isHTML5">Size</th>
                                <th ng-show="uploader.isHTML5">Progress</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in uploader.queue">
                                <td><strong>{{ item.file.name }}</strong></td>
                                <td ng-show="uploader.isHTML5" nowrap>{{ item.file.size/1024/1024|number:2 }} MB</td>
                                <td ng-show="uploader.isHTML5">
                                    <div class="progress" style="margin-bottom: 0;">
                                        <div class="progress-bar" role="progressbar" ng-style="{ 'width': item.progress + '%' }"></div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span ng-show="item.isSuccess"><i class="glyphicon glyphicon-ok"></i></span>
                                    <span ng-show="item.isCancel"><i class="glyphicon glyphicon-ban-circle"></i></span>
                                    <span ng-show="item.isError"><i class="glyphicon glyphicon-remove"></i></span>
                                </td>
                                <td nowrap>
                                
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div>
                        <div>
                            Queue progress:
                            <div class="progress" style="">
                                <div class="progress-bar" role="progressbar" ng-style="{ 'width': uploader.progress + '%' }"></div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
            <div class="well">
              <div id="datetimepicker2" class="input-append">
                <input data-format="MM/dd/yyyy HH:mm:ss PP" type="text"></input>
                <span class="add-on">
                  <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                  </i>
                </span>
              </div>
            </div>
            <script type="text/javascript">
              $(function() {
                $('#datetimepicker2').datetimepicker({
                  language: 'en',
                  pick12HourFormat: true
                });
              });
            </script>

        </div>
        <button type='submit' ng-click='hello(garage_sale)'></button>


    </body>
</html>





